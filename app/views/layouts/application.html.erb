    <!-- Size should be 180 x 180 pixels -->
    <%= favicon_link_tag '/images/apple-touch-icon-180x180.png', :rel => 'apple-touch-icon', :type => 'image/png', :sizes => '180x180' %>

    <!-- Size should be 144 x 144 pixels -->
    <%= favicon_link_tag '/images/apple-touch-icon-144x144.png', :rel => 'apple-touch-icon', :type => 'image/png', :sizes => '144x144' %>

    <!-- For iPhone with high-resolution Retina display: -->
    <!-- Size should be 114 x 114 pixels -->
    <%= favicon_link_tag '/images/apple-touch-icon-114x114.png', :rel => 'apple-touch-icon', :type => 'image/png', :sizes => '114x114' %>

    <!-- For first- and second-generation iPad: -->
    <!-- Size should be 72 x 72 pixels -->
    <%= favicon_link_tag '/images/apple-touch-icon-72x72.png', :rel => 'apple-touch-icon', :type => 'image/png', :sizes => '72x72' %>

    <!-- For non-Retina iPhone, iPod Touch, and Android 2.1+ devices: -->
    <!-- Size should be 57 x 57 pixels -->
    <%= favicon_link_tag '/images/apple-touch-icon.png', :rel => 'apple-touch-icon', :type => 'image/png' %>

    <!-- For all other devices -->
    <!-- Size should be 32 x 32 pixels -->
    <%= favicon_link_tag '/images/favicon.ico', :rel => 'shortcut icon' %>

    <%#= javascript_include_tag "https://www.google.com/jsapi", "chartkick" %>
    <script async defer src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAk-uxfXInyyKMHHkX8AAAicRtsvSb0hac&callback=initMap"
  type="text/javascript"></script>
    <%= javascript_include_tag "application" %>
    

    <!-- Le HTML5 shim, for IE6-8 support of HTML elements -->
