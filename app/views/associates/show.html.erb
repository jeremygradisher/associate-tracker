<%- model_class = Associate -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>



<div class="col-lg-4">
  <% @associate_attachments.each do |p| %>
        <%= image_tag p.avatar_url, :style => 'max-width:90%;padding:5%;' %><br>
        
        <%= link_to t('.edit', :default => t("Edit Attachment")),
              edit_associate_attachment_path(p), :class => 'btn btn-default' %>
        <%#= link_to "Destroy Attachment", destroy_associate_attachment_path(p) %>
        <%= link_to t('.destroy', :default => t("Destroy Attachment")),
              associate_attachment_path(p),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
        
  <% end %>
</div>

<div class="col-lg-8">
  <div class="show1">
    <%= @associate.name %>, 
    <% @positions.each do |p| %>
      <%= p.pos_name %> 
    <% end %>
    <% if @associate.active == true %>
    <i class="fa fa-check" style="color:#00aa00" title="Associate is Active"></i>
    <% else %>
    <i class="fa fa-close" style="color:#aa0000" title="Associate is not currently Active"></i>
    <% end %>
  </div>
  <div class="show2">
    Home State: <strong><%= @associate.primary_state %></strong>&nbsp;&nbsp;&nbsp;&nbsp;
    Working Locations: 
    <strong>
    <% @wrklocs.each do |p| %>
      <%= p.wrkstate %> 
    <% end %>
    </strong>
  </div>
  <div class="show3">
    <%= model_class.human_attribute_name(:project_history) %>:
    <%= @associate.project_history %>
  </div>
  <hr>
  <div class="show3">
    <%= model_class.human_attribute_name(:notes) %>:
    <%= @associate.notes %>
  </div>
  <hr>
  <div class="show3">
    <%= model_class.human_attribute_name(:phone_primary) %>: 
    <%= number_to_phone(@associate.phone_primary, area_code: true) %>&nbsp;&nbsp;&nbsp;&nbsp;
    <%= model_class.human_attribute_name(:phone_cell) %>:
    <%= number_to_phone(@associate.phone_cell, area_code: true) %>
  </div>
  <div class="show3">
    <%= model_class.human_attribute_name(:email) %>: 
    <a href="mailto:<%= @associate.email %>">
      <%= @associate.email %>
    </a>
    &nbsp;&nbsp;&nbsp;&nbsp;
    <%= model_class.human_attribute_name(:email_personal) %>: 
    <a href="mailto:<%= @associate.email_personal %>">
      <%= @associate.email_personal %>
    </a>
  </div>
  <div class="show3">
  <%= model_class.human_attribute_name(:address_home) %>:
  <%= @associate.primary_street %> <%= @associate.primary_city %> <%= @associate.primary_state %> <%= @associate.primary_zip %>
  </div>
  
  <div class="show3">
  <%= model_class.human_attribute_name(:address_business) %>:
  <%= @associate.business_street %> <%= @associate.business_city %> <%= @associate.business_state %> <%= @associate.business_zip %>
  </div>
  
  <div class="show3">
    <%= model_class.human_attribute_name(:ein_ss) %>:
    <%= @associate.ein_ss %>&nbsp;&nbsp;&nbsp;&nbsp;
    <%= model_class.human_attribute_name(:birthday) %>:
    <%= @associate.birthday %>
  </div>
  
  <div class="show3">
    <%= model_class.human_attribute_name(:family) %>:
    <%= @associate.family %>
  </div>
</div>



<div class="col-lg-12" style="text-align:center;">
  <hr>
    <%= link_to t('.back', :default => t("<= Back To Associates")),
                  associates_path, :class => 'btn btn-default'  %>
    <%= link_to t('.edit', :default => t("Edit Associate")),
                  edit_associate_path(@associate), :class => 'btn btn-default' %>
    <%= link_to t('.destroy', :default => t("Delete Associate")),
                  associate_path(@associate),
                  :method => 'delete',
                  :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
