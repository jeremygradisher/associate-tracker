<div class="col-md-6 col-md-offset-3 new-user-login">
  <%= bootstrap_devise_error_messages! %>
  <div class="panel panel-default">
    <div class="panel-heading">
      <h4><%= t('.sign_up', :default => "Sign up") %></h4>
    </div>
    <div class="panel-body">
      <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), html: { role: "form" }) do |f| %>
        <div class="form-group">
          <%= f.label :email %>
          <div class="input-group"><span class="input-group-addon"> <i class="fa fa-user" aria-hidden="true"></i></span>
          <%= f.email_field :email, autofocus: true, class: "form-control" %>
          </div>
        </div>
        <div class="form-group">
          <%= f.label :password %>
          <div class="input-group"> <span class="input-group-addon"><i class="fa fa-unlock-alt" aria-hidden="true"></i></span>
          <%= f.password_field :password, class: "form-control" %>
          </div>
        </div>
        <div class="form-group">
          <%= f.label :password_confirmation %>
          <div class="input-group"> <span class="input-group-addon"><i class="fa fa-unlock-alt" aria-hidden="true"></i></span>
          <%= f.password_field :password_confirmation, class: "form-control" %>
          </div>
        </div>
        <%= f.submit t('.sign_up', :default => "Sign up"), class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
  <%= render "devise/shared/links" %>
</div>
