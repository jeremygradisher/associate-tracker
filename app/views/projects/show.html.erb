<%- model_class = Project -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @project.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:project_street) %>:</strong></dt>
  <dd><%= @project.project_street %></dd>
  <dt><strong><%= model_class.human_attribute_name(:project_city) %>:</strong></dt>
  <dd><%= @project.project_city %></dd>
  <dt><strong><%= model_class.human_attribute_name(:project_state) %>:</strong></dt>
  <dd><%= @project.project_state %></dd>
  <dt><strong><%= model_class.human_attribute_name(:project_zip) %>:</strong></dt>
  <dd><%= @project.project_zip %></dd>
  
  <dt><strong><%= model_class.human_attribute_name(:project_start) %>:</strong></dt>
  <dd><%= @project.project_start %></dd>
  
  <dt><strong><%= model_class.human_attribute_name(:project_finish) %>:</strong></dt>
  <dd><%= @project.project_finish %></dd>
  
  
  <dt><strong><%= model_class.human_attribute_name(:brief_description) %>:</strong></dt>
  <dd><%= @project.brief_description %></dd>
  <dt><strong><%= model_class.human_attribute_name(:services) %>:</strong></dt>
  <dd><%= @project.services %></dd>
  <dt><strong><%= model_class.human_attribute_name(:staffing_notes) %>:</strong></dt>
  <dd><%= @project.staffing_notes %></dd>
  <dt><strong><%= model_class.human_attribute_name(:deal_terms) %>:</strong></dt>
  <dd><%= @project.deal_terms %></dd>
  <dt><strong><%= model_class.human_attribute_name(:rate) %>:</strong></dt>
  <dd><%= @project.rate %></dd>
  <dt><strong><%= model_class.human_attribute_name(:additional_terms) %>:</strong></dt>
  <dd><%= @project.additional_terms %></dd>
  <dt><strong><%= model_class.human_attribute_name(:latitude) %>:</strong></dt>
  <dd><%= @project.latitude %></dd>
  <dt><strong><%= model_class.human_attribute_name(:longitude) %>:</strong></dt>
  <dd><%= @project.longitude %></dd>
  
  <dt><strong><%= model_class.human_attribute_name(:associates) %>:</strong></dt>  
    <% @associates.each do |p| %>
      <dd><%= p.name %></dd>
    <% end %> 
  
  
</dl>



<%= link_to t('.back', :default => t("helpers.links.back")),
              projects_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_project_path(@project), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              project_path(@project),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
