         <%= f.file_field :cicon, :multiple => true, name: "project_cicons[cicon][]", :class => 'form-control' %>
         </div>
     <%# end %>
    <% end %>
  </div>
  
  <div class="form-group">
    <%= f.label :status, :class => 'control-label col-lg-2' %>
    <div class="col-lg-2">
      <%= f.select :status, ['Prospect', 'In Process', 'Complete'], {include_blank: true}, :class => 'form-control' %>
    </div>
    <%=f.error_span(:status) %>
  </div>
  
  <!--
  <div class="prospect_form" style="display: none;">This is the Prospect form.</div>
  <div class="in_process_form" style="display: none;">This is the In Process form.</div>
  <div class="complete_form" style="display: none;">This is the Complete form.</div>
  -->

  
 <script>
    $(document).ready(function(){
      //first checking to see what it is and changing
     if ($('#project_status').val() == "Prospect"){
        $(".prospect_form").show();
     }
     else {
        $(".prospect_form").hide();
     }
     if ($('#project_status').val() == "In Process"){
        $(".in_process_form").show();
     }
     else {
        $(".in_process_form").hide();
     }
     if ($('#project_status').val() == "Complete"){
        $(".complete_form").show();
     }
     else {
        $(".complete_form").hide();
     }
      //end checking to see what it is and changing
      
      //then if the status changes
      $("#project_status").change(function() {
        if ($("#project_status").val()=="Prospect")
          $(".prospect_form").show();
        else
          $(".prospect_form").hide();
      });
      
      $("#project_status").change(function() {
        if ($("#project_status").val()=="In Process")
          $(".in_process_form").show();
        else
          $(".in_process_form").hide();
      });
      
      $("#project_status").change(function() {
        if ($("#project_status").val()=="Complete")
          $(".complete_form").show();
        else
          $(".complete_form").hide();
      });
      //end if the status changes
    });
 </script>
 
  
  
  
  
