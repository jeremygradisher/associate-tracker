    </div>
    <%=f.error_span(:client_name) %>
    
    <% if @project_cicons.exists? %>
    <%= f.label :client_Icon, :class => 'control-label col-lg-2'  %>
        <div class="col-lg-4">
          <% @project_cicons.each do |p| %>
